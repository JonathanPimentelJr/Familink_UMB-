#:kivy 1.0.9
WindowManager:                                                                  #WindowManager with each window
     LandingScreen:
     ScanZupuScreen:
     DYHScreen:
     LoginScreen:
     
<LandingScreen>:
     name: "LandingScreen"                                                      #LandingScreen reference name

     Label:                                                                     
          text: "Welcome!"
          text_size: root.width, (root.height * 0.95)
          font_size: self.width/10
          halign: 'center'
          valign: 'top'
          
     Button:                                                                    #This Button transitions the screen to the ScanZupu Screen
          text: "Scan Your Zup!"
          font_size: self.width/10                                              #Size of the font, it is relative to the size of the Window
          background_color: 0.31, 1, 0, 1                                       #RBG values to determine color, 4th argument is the opacity
          size_hint: 1, 0.2                                                     #Size relative to the Window size
          pos_hint: {"x":0, "top":0.6}                                          #Position relative to the Window: 
                                                                                                                  #x = %from the right top = %from the top
     
          on_release: app.root.current = "ScanZupuScreen"                       #Assigns the on_release instance variable to switch Screens when the button is released
                    
     Button:                                                                    #This Button transitions the screen to the ScanZupu Screen
          text: "Digitize Your History!"
          font_size: self.width/10
          background_color: 0.31, 1, 0, 1
          size_hint: 1, 0.2 
          pos_hint: {"x":0, "top":0.4} 
     
          on_release: app.root.current = "DYHScreen"                            #Assigns the on_release instance variable to switch Screens when the button is released
                    
     Button:                                                                    #This Button transitions the screen to the ScanZupu Screen
          text: "Login or Sign Up!"
          font_size: self.width/10
          background_color: 0.31, 1, 0, 1
          size_hint: 1, 0.2 
          pos_hint: {"x":0, "top":0.2} 
     
          on_release: app.root.current = "LoginScreen"                          #Assigns the on_release instance variable to switch Screens when the button is released
          

<ScanZupuScreen>:
     name: "ScanZupuScreen"                                                     #Screen reference name

     Label:                                                                     
          text: "Scan Zup Page"
          text_size: root.width, (root.height * 0.95)
          font_size: self.width/10
          halign: 'center'
          valign: 'top'
    
     Button:                                                                    #This Button transitions the screen to the Landing Screen
          text: "Back"
          font_size: self.width/10
          background_color: 1, 1, 1, 1
          size_hint: 0.2, 0.1 
          pos_hint: {"x":0.8, "top":0.1} 
    
          on_release: app.root.current = "LandingScreen"                        #Assigns the on_release instance variable to switch Screens when the button is released

<DYHScreen>:
     name: "DYHScreen"                                                          #Screen reference name

     Label:                                                                     
          text: "Digitize Your History"
          text_size: root.width, (root.height * 0.95)
          font_size: self.width/10
          halign: 'center'
          valign: 'top'
              
     Button:                                                                    #This Button transitions the screen to the Landing Screen
          text: "Back"
          font_size: self.width/10
          background_color: 1, 1, 1, 1
          size_hint: 0.2, 0.1 
          pos_hint: {"x":0.8, "top":0.1} 
    
          on_release: app.root.current = "LandingScreen"                        #Assigns the on_release instance variable to switch Screens when the button is released

<LoginScreen>:
     name: "LoginScreen"                                                       # Screen reference name

     Label:                                                                     
          text: "Login, or Sign Up!"
          text_size: root.width, (root.height * 0.95)
          font_size: self.width/10
          halign: 'center'
          valign: 'top'
              
     Button:                                                                    #This Button transitions the screen to the Landing Screen
          text: "Back"
          font_size: self.width/10
          background_color: 1, 1, 1, 1
          size_hint: 0.2, 0.1 
          pos_hint: {"x":0.8, "top":0.1} 
    
          on_release: app.root.current = "LandingScreen"                        #Assigns the on_release instance variable to switch Screens when the button is released